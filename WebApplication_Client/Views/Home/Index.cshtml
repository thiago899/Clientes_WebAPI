@model ClientModelCon

<br/>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>#</td>
            <td>ID</td>
            <td>NOME</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in (List<ClientModelCon>)ViewBag.ListClients)
        {
            <tr>
                <td style="width:80px;"><button class="btn btn-default" onclick="register(@item.Id.ToString())">Editar</button></td>
                <td style="width:80px;"><button class="btn btn-danger" onclick="delete(@item.Id.ToString())">Excluir</button></td>
                <td>@item.Id.ToString()</td>
                <td>@item.Nome.ToString()</td>
            </tr>
        }

    </tbody>

</table>

<button class="btn btn-block btn-primary" onclick="register()">Criar cliente</button>

<script>
    function register(id) {
        if (id == null) {
            id = "";
        }
        else {
            id = "/" + id;
        }
        window.location.href = window.location.origin + "/Home/Register" + id;
    }
        function delete(id) {
            window.location.href = window.location.origin + "/Home/Delete" + id;
        }
</script>
